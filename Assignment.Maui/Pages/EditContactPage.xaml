<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Assignment.Maui.ViewModels"
             xmlns:model="clr-namespace:Business.Models;assembly=Business"
             
             x:DataType="vm:EditContactViewModel"
             x:Class="Assignment.Maui.Pages.EditContactPage"
             Title="Edit Contact">
    <VerticalStackLayout
        Padding="20"
        Spacing="5">
        <Label 
            Text="Edit Contact"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label>
            <Label.Text>
                <MultiBinding StringFormat="Id: {0}">
                    <Binding Path="Contact.Id" />
                </MultiBinding>
            </Label.Text>
        </Label>

        <Label 
            Text="First Name" />
        <Entry 
            Text="{Binding Contact.FirstName}"
            Placeholder="First Name" />

        <Label 
            Text="Last Name:" />
        <Entry 
            Text="{Binding Contact.LastName}"
            Placeholder="Last Name" />

        <Label 
            Text="Email:" />
        <Entry 
            Text="{Binding Contact.Email}"
            Placeholder="Email" />

        <Label 
            Text="Phone:" />
        <Entry 
            Text="{Binding Contact.Phone}"
            Placeholder="Phone number" />

        <Label 
            Text="Street Adress:" />
        <Entry 
            Text="{Binding Contact.Street}"
            Placeholder="Street Adress" />

        <Label 
            Text="ZipCode:" />
        <Entry 
            Text="{Binding Contact.ZipCode}"
            Placeholder="ZipCode" />

        <Label 
            Text="City:" />
        <Entry 
            Text="{Binding Contact.City}"
            Placeholder="City" />

        <Button
            Text="Save"
            Command="{Binding SaveContactCommand }" />
        <Button
            Text="Cancel"
            Command="{Binding CancelCommand}" />
    </VerticalStackLayout>
</ContentPage>