<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Assignment.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Assignment.Maui"
    xmlns:pages="clr-namespace:Assignment.Maui.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Title="Contact App">

    <ShellContent
        Title="Contacts"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Add Contacts"
    ContentTemplate="{DataTemplate pages:AddContactPage}"
    Route="AddContactPage" />

</Shell>
